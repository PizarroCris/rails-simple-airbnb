<%= simple_form_for(@flat) do |f| %>
      <%= f.input :name %>
      <%= f.input :address %>
      <%= f.input :description %>
      <%= f.input :number_of_guests %>
      <%= f.input :price_per_night %>
      <div class="d-flex gap-3">
        <%= f.submit "Create Flat", class: "btn btn-primary" %>
        <%= link_to "Cancel", root_path, class: "btn btn-danger" %>
      </div>
    <% end %>
