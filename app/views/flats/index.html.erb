<div class='conatiner p-4'>
  <div class="row">
    <h2>All our Flats (<%= @flats.count %>)</h2>
    <% @flats.each do |flat| %>
      <div class="col-4">
        <div class="card mt-3 bg-light shadow">
          <div class="card-body">
            <h5 class="card-title"><%= flat.name %></h5>
            <p class="card-text">
              <p>Address: <%= flat.address %></p>
              <div class="d-flex gap-3">
                <div><i class="fa-solid fa-user-group"></i> <%= flat.number_of_guests %></div>
                <div><i class="fa-solid fa-euro-sign"></i> <%= flat.price_per_night %></div>
              </div>
            </p>
          </div>
          <div class='bg-white py-2 d-flex'>
            <%= link_to "More Info", flat_path(flat), class: 'btn btn-link btn-sm text-decoration-none mx-2' %>
            <%= link_to "Edit", edit_flat_path(flat), class: 'btn btn-link btn-sm text-decoration-none mx-2 text-warning' %>
            <%= link_to "Remove", flat_path(flat),
            data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: 'btn btn-link btn-sm text-decoration-none mx-2 text-danger' %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
